<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Spacer for top breathing room -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- App Icon/Logo Placeholder -->
    <TextView
        android:text="ðŸŒ¿"
        android:textSize="72sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Main Title -->
    <TextView
        android:text="@string/biodiversity_explorer"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        android:textColor="#1B5E20"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Subtitle -->
    <TextView
        android:text="Discover Â· Document Â· Preserve"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.15"
        android:textColor="#4CAF50"
        android:paddingBottom="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Add New Sighting Button -->
    <Button
        android:id="@+id/btnAdd"
        android:text="@string/add_new_sighting"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_primary"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false" />

    <!-- View Sightings Button -->
    <Button
        android:id="@+id/btnView"
        android:text="@string/view_sightings"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="#FBFBFB"
        android:background="@drawable/button_secondary"
        android:elevation="4dp"
        android:textAllCaps="false" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
